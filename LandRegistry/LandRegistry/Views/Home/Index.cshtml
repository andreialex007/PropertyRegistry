@{
    ViewData["Title"] = "Управление участками";
}


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBPao9V4NIAQgTD7O5a4Xf8n3fk7rkdf2s&callback=initMap&language=RU" async defer></script>
<script src="https://unpkg.com/vuejs-paginate@latest"></script>
<script src="https://unpkg.com/vuejs-paginate@0.9.0"></script>
<script>Vue.component('paginate', VuejsPaginate)</script>

<script src="~/js/call-scripts/lands-page.js"></script>


<div class="root fill-remaining-height lands-page">
    <div class="left-block">
        <div class="row">
            <div class="col-6">
                <h5><i class="fas fa-list"></i> Список земель</h5>
            </div>
            <div class="col-6 text-right">
                <span class="btn btn-primary btn-xs">
                    <i class="fas fa-plus-square"></i>
                    Создать
                </span>
            </div>
        </div>
        <div class="table-list">
            <div class="display: flex; justify-content: space-between;">
                <span>
                    На странице
                    <select v-model="config.take" class="form-control form-control-sm per-page-control">
                        <option>20</option>
                        <option>50</option>
                        <option>100</option>
                    </select>
                </span>
                <nav class="table-nav" aria-label="Page navigation example">
                    <paginate
                        :page-count="totalPages"
                        :click-handler="changePage"
                        :prev-text="'След.'"
                        :next-text="'Пред.'"
                        :page-link-class="'page-link'"
                        :page-class="'page-item'"
                        :prev-link-class="'page-link'"
                        :prev-class="'page-item'"
                        :next-link-class="'page-link'"
                        :next-class="'page-item'"
                        :container-class="'pagination pagination-sm'">
                    </paginate>
                </nav>
            </div>
            <table class="table table-sm table-striped table-bordered lands-table-header">
                <thead>
                    <tr>
                        <th class="land-number">#</th>
                        <th>Наименование</th>
                        <th class="land-type">Тип</th>
                        <th class="actions"></th>
                    </tr>
                </thead>
            </table>

            <div class="scroll-wrapper">
                <table class="table table-sm table-striped table-bordered lands-table-body">
                    <tbody>
                        <tr v-for="item in items">
                            <td class="land-number">{{ item.Id }}</td>
                            <td>{{ item.Name }}</td>
                            <td class="land-type">{{ item.LandType.Name }}</td>
                            <td class="actions">
                                <span class="btn btn-xs btn-primary"><i class="fas fa-eye"></i></span>
                                <span class="btn btn-xs btn-danger"><i class="fas fa-trash-alt"></i></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="right-block">
        <div>
            <h5><i class="fas fa-map-marked"></i> Карта</h5>
        </div>
        <div id="map-placeholder" class="table-list ">
        </div>
    </div>
</div>

<div style="display: none;" class="edit-land-modal">
    <div style="display: inline-block; background-color: rgba(0, 0, 0, 0.2);;" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Просмотр участка #245</h5>
                    <span class="close">
                        <span aria-hidden="true">&times;</span>
                    </span>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Наименование земельного участка *</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Введите наименование">
                                <small id="emailHelp" class="form-text text-muted">Поле обязательно для заполнения.</small>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Кадастровый номер земельного участка *</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Введите кадастровый номер">
                                <small id="emailHelp" class="form-text text-muted">Поле обязательно для заполнения.</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Инвентарный номер основного средства</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Введите номер основного средства">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Тип земельного участка</label>
                                <select class="form-control">
                                    <option value="">Не указан</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Вид права Общества на земельный участок</label>
                                <select class="form-control">
                                    <option value="">Не указан</option>
                                </select>
                            </div>
                        </div>


                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <div>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-secondary">
                                            <i class="fas fa-file"></i>
                                            MyFileName.docx
                                        </button>
                                        <button type="button" class="btn btn-dark">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                    <label class="custom-file-upload btn btn-primary mb-0">
                                        <input type="file" />
                                        <i class="fas fa-upload"></i>
                                        Прикрепить файл
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">
                        <i class="fas fa-edit"></i>
                        Редактировать
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>